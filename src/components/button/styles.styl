.button 
  border: none
  position: relative
  cursor: pointer
  transition: transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3), opacity 500ms cubic-bezier(0, -0.3, 0.5, 1.3)
  display: inline-flex
  align-items: center
  justify-content: center
  border-radius: 16px
  outline: none


.button_primary 
  background-color: hsla(28, 100%, 50%, 1)
  color: hsla(0, 0%, 100%, 1)


.button_primary .spinner 
  border: 4px solid hsla(28, 100%, 50%, 1)
  border-top: 4px solid hsla(0, 0%, 100%, 1)


.button_secondary 
  background-color: hsla(21, 21%, 43%, 0.12)
  color: hsla(228, 5%, 19%, 1)


.button_secondary .spinner 
  border: 4px solid hsla(228, 5%, 19%, 1)
  border-top: 4px solid hsla(21, 21%, 43%, 0.12)


.button:disabled 
  opacity: 0.36
  pointer-events: none


.button.focused:focus-visible 
  outline: 3px solid hsla(204, 100%, 50%, 1)
  outline-offset: 2px


.button.loading 
  pointer-events: none


.button.loading .contentGroup
  visibility: hidden;

.button.loading .spinner 
  visibility: visible;

.button::after
  content: ''
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: hsla(0, 0%, 100%, 0.12)
  opacity: 0
  pointer-events: none
  z-index: 1
  border-radius: 16px
  transition: opacity 500ms cubic-bezier(0, -0.3, 0.5, 1.3)


.button:hover 
  transform: scale(1.05)


.button:hover::after 
  opacity: 1


.button:active 
  transform: scale(0.95)
  opacity: 0.8

.spinner 
  position: absolute
  top: 50%
  left: 50%
  border-radius: 50%
  animation: spin 1s linear infinite
  transform: translate(-50%, -50%)

.contentGroup 
  display: flex
  align-items: center
  justify-content: center
  position: relative
  max-width: 100%

.label 
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

@keyframes spin {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}